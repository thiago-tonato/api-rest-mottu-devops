          }
        },
        {
          "name": "Buscar Sensor por ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/sensores/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "sensores",
                "1"
              ]
            }
          }
        },
        {
          "name": "Atualizar Sensor",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"localizacao\": \"Pátio Centro - Zona A Reformada\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sensores/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "sensores",
                "1"
              ]
            }
